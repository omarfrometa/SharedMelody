# =============================================
# SHARED MELODY FRONTEND - TEMPLATE
# Copiar este archivo como .env.development o .env.production
# =============================================

# API Configuration
REACT_APP_API_URL=http://localhost:3001/api

# App Configuration
REACT_APP_APP_NAME=SharedMelody
REACT_APP_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# Feature Flags
REACT_APP_ENABLE_DEBUG=true
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_ERROR_REPORTING=false

# OAuth URLs
REACT_APP_GOOGLE_OAUTH_URL=http://localhost:3001/api/auth/google
REACT_APP_FACEBOOK_OAUTH_URL=http://localhost:3001/api/auth/facebook
REACT_APP_MICROSOFT_OAUTH_URL=http://localhost:3001/api/auth/microsoft
REACT_APP_APPLE_OAUTH_URL=http://localhost:3001/api/auth/apple

# File Upload Configuration
REACT_APP_MAX_UPLOAD_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,audio/mpeg,audio/wav,audio/flac

# UI Configuration
REACT_APP_DEFAULT_LANGUAGE=es
REACT_APP_THEME_MODE=light
REACT_APP_ENABLE_DARK_MODE=true

# Performance Settings
REACT_APP_API_TIMEOUT=30000
REACT_APP_ENABLE_SERVICE_WORKER=false

# Development Tools
REACT_APP_SHOW_PERFORMANCE_METRICS=false
REACT_APP_LOG_LEVEL=error

# Analytics (opcional para producci√≥n)
REACT_APP_GOOGLE_ANALYTICS_ID=your-ga-id
REACT_APP_SENTRY_DSN=your-sentry-dsn