# =============================================
# SHARED MELODY BACKEND - TEMPLATE
# Copiar este archivo como .env.development o .env.production
# =============================================

# Configuración del servidor
NODE_ENV=development
PORT=3001

# Frontend URL (para CORS y redirects)
FRONTEND_URL=http://localhost:3000

# =============================================
# BASE DE DATOS POSTGRESQL
# =============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sharedmelody_dev
DB_USER=postgres
DB_PASSWORD=your_postgres_password
DB_POOL_MAX=20
DB_POOL_MIN=0
DB_IDLE_TIMEOUT=10000
DB_CONNECTION_TIMEOUT=30000

# =============================================
# REDIS CONFIGURACIÓN
# =============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================
# JWT CONFIGURACIÓN
# =============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# =============================================
# EMAIL CONFIGURACIÓN
# =============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@sharedmelody.com

# =============================================
# FILE UPLOAD CONFIGURACIÓN
# =============================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,audio/mpeg,audio/wav,audio/flac
UPLOAD_DEST=./uploads

# =============================================
# RATE LIMITING
# =============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================
# OAUTH PROVIDERS
# =============================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY_PATH=./keys/apple-private-key.p8
